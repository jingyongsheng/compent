<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.zcbl</groupId>
		<artifactId>compent-master</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<properties>
		<skip_maven_deploy>false</skip_maven_deploy>
	</properties>
	<artifactId>compent</artifactId>
	<name>${project.artifactId}</name>
	<packaging>jar</packaging>
	<dependencies>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-api</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-api</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-impl</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-function-impl</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-language-repertories</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-quartz</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-restful</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-data-center-api</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-data-center-client</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-data-center-impl</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-data-center-log</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-db-client</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-db-pool</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-config</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.zcbl</groupId>
			<artifactId>compent-client-restful</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<phase>deploy</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>false</createSourcesJar>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<artifactSet>
								<includes>
									<include>com.zcbl:compent-api</include>
									<include>com.zcbl:compent-client-api</include>
									<include>com.zcbl:compent-client-core</include>
									<include>com.zcbl:compent-client-impl</include>
									<include>com.zcbl:compent-function-impl</include>
									<include>com.zcbl:compent-language-repertories</include>
									<include>com.zcbl:compent-client-quartz</include>
									<include>com.zcbl:compent-client-restful</include>
									<include>com.zcbl:compent-data-center-api</include>
									<include>com.zcbl:compent-data-center-client</include>
									<include>com.zcbl:compent-data-center-impl</include>
									<include>com.zcbl:compent-data-center-log</include>
									<include>com.zcbl:compent-db-client</include>
									<include>com.zcbl:compent-db-pool</include>
									<include>com.zcbl:compent-config</include>
									<include>com.zcbl:compent-client-restful</include>
								</includes>
							</artifactSet>
							<transformers>

							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>